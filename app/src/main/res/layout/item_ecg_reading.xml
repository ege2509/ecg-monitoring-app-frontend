<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recordingCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_rounded_card"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/recordingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording 1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recordingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2025-05-16 14:30"
        android:textSize="14sp"
        android:textColor="#666" />

    <TextView
        android:id="@+id/recordingDiagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnosis: Normal"
        android:textSize="14sp"
        android:textColor="#333" />
</LinearLayout>
